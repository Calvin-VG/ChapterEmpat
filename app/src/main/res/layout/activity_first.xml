<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".toastsnackbar.FirstActivity">

    <Button
        android:id="@+id/btn_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toast"/>

    <Button
        android:id="@+id/btn_snackbar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Snackbar 1"/>

    <Button
        android:id="@+id/btn_snackbar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Snackbar 2 Action Toast"/>

    <Button
        android:id="@+id/btn_snackbar3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Snackbar 3 Dismiss"/>
</LinearLayout>